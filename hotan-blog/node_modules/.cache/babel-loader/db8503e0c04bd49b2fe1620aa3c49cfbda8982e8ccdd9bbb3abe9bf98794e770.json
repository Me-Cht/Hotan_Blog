{"ast":null,"code":"import api, { getDetailInfo } from \"@/api/api\";\nimport moment from \"moment/moment\";\nimport VueMarkdown from 'vue-markdown'; // 引入 vue-markdown\n\nexport default {\n  name: 'info',\n  components: {\n    VueMarm\n  },\n  methods: {\n    formatDateTime(dateTime) {\n      return moment(dateTime).format('YYYY-MM-DD HH:mm');\n    }\n  },\n  created() {\n    api.getDetailInfo().then(data => {\n      this.user = data;\n      api.getSelfArticle(this.user.id).then(response => {\n        this.blogs = response.data.data;\n        if (response.data.data.length === 0) {\n          this.blog.title = \"你还没有发布过任何博客\";\n          console.log(\"无返回值\");\n        }\n      });\n    }).catch(error => {\n      console.log(error);\n    });\n  },\n  mounted() {}\n};","map":{"version":3,"names":["api","getDetailInfo","moment","VueMarkdown","name","components","VueMarm","methods","formatDateTime","dateTime","format","created","then","data","user","getSelfArticle","id","response","blogs","length","blog","title","console","log","catch","error","mounted"],"sources":["src/pages/Info.vue"],"sourcesContent":["<template>\n  <div class=\"personal-center\">\n    <h1>个人中心</h1>\n\n    <div class=\"profile\">\n      <h2>个人资料</h2>\n      <div>\n        <label>用户名:</label>\n        <span>{{ user.name }}</span>\n      </div>\n      <div>\n        <label>邮箱:</label>\n        <span>{{ user.email }}</span>\n      </div>\n      <!-- 更多个人资料信息 -->\n    </div>\n\n    <div class=\"blog\">\n      <h2>我的博客</h2>\n      <el-card v-for=\"blog in blogs\" :key=\"blog.id\" class=\"blog-card\">\n        <el-row>\n          <div class=\"blog-title\">{{ blog.title }}</div>\n        </el-row>\n        <el-row>\n          <vue-markdown :source=\"blog.content\" ></vue-markdown>\n        </el-row>\n        <el-row>\n          <div class=\"create_time\">{{ formatDateTime(blog.create_time) }}</div>\n        </el-row>\n      </el-card>\n\n    </div>\n\n    <!-- 其他个人中心功能模块 -->\n\n  </div>\n</template>\n\n<script>\nimport api, {getDetailInfo} from \"@/api/api\";\nimport moment from \"moment/moment\";\nimport VueMarkdown from 'vue-markdown'; // 引入 vue-markdown\n\n\nexport default {\n  name:'info',\n  components:{\n    VueMarm   },\n  methods:{\n    formatDateTime(dateTime) {\n      return moment(dateTime).format('YYYY-MM-DD HH:mm');\n    },\n  },\n  created() {\n    api.getDetailInfo().then(data => {\n      this.user = data\n      api.getSelfArticle(this.user.id)\n        .then(response => {\n          this.blogs = response.data.data;\n          if (response.data.data.length===0){\n            this.blog.title=\"你还没有发布过任何博客\"\n            console.log(\"无返回值\")\n          }\n        });\n    }).catch(error=>{\n      console.log(error)\n    });\n\n  },\n  mounted() {\n\n  },\n};\n</script>\n\n\n\n\n<style scoped>\n.personal-center {\n  max-width: 800px;\n  margin: 0 auto;\n}\n\nh1 {\n  text-align: center;\n}\n\n.profile {\n  margin-top: 30px;\n}\n\n.profile h2 {\n  font-size: 24px;\n  margin-bottom: 10px;\n}\n\n.profile div {\n  margin-bottom: 10px;\n}\n\n.profile label {\n  font-weight: bold;\n}\n.blog-card {\n  text-align: left;\n}\n\n.orders {\n  margin-top: 30px;\n}\n\n.orders h2 {\n  font-size: 24px;\n  margin-bottom: 10px;\n}\n\ntable {\n  width: 100%;\n  border-collapse: collapse;\n}\n\nthead th {\n  text-align: left;\n  background-color: #f5f5f5;\n  padding: 8px;\n}\n\ntbody td {\n  padding: 8px;\n}\n</style>\n"],"mappings":"AAuCA,OAAAA,GAAA,IAAAC,aAAA;AACA,OAAAC,MAAA;AACA,OAAAC,WAAA;;AAGA;EACAC,IAAA;EACAC,UAAA;IACAC;EAAA;EACAC,OAAA;IACAC,eAAAC,QAAA;MACA,OAAAP,MAAA,CAAAO,QAAA,EAAAC,MAAA;IACA;EACA;EACAC,QAAA;IACAX,GAAA,CAAAC,aAAA,GAAAW,IAAA,CAAAC,IAAA;MACA,KAAAC,IAAA,GAAAD,IAAA;MACAb,GAAA,CAAAe,cAAA,MAAAD,IAAA,CAAAE,EAAA,EACAJ,IAAA,CAAAK,QAAA;QACA,KAAAC,KAAA,GAAAD,QAAA,CAAAJ,IAAA,CAAAA,IAAA;QACA,IAAAI,QAAA,CAAAJ,IAAA,CAAAA,IAAA,CAAAM,MAAA;UACA,KAAAC,IAAA,CAAAC,KAAA;UACAC,OAAA,CAAAC,GAAA;QACA;MACA;IACA,GAAAC,KAAA,CAAAC,KAAA;MACAH,OAAA,CAAAC,GAAA,CAAAE,KAAA;IACA;EAEA;E